<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/infoScrollView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:id="@+id/mainView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible" >
        
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:background="@drawable/btn_states"
            android:orientation="horizontal"
            android:padding="10dp" >

            <ImageButton
                android:id="@+id/statemove"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:background="#00000000"
                android:contentDescription="@string/hello_world"
                android:src="@drawable/move" />

            <ImageButton
                android:id="@+id/staterotate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:background="#00000000"
                android:contentDescription="@string/hello_world"
                android:src="@drawable/rotate" />

            <ImageButton
                android:id="@+id/statezoom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:background="#00000000"
                android:contentDescription="@string/hello_world"
                android:src="@drawable/zoom" />

            <ImageButton
                android:id="@+id/stateresize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:background="#00000000"
                android:contentDescription="@string/hello_world"
                android:src="@drawable/resize" />
        </LinearLayout>
        
	    <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center"
	        android:layout_margin="5dp"
	        android:orientation="vertical" >
	
	        <ImageButton
	            android:id="@+id/stateclose"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center"
	            android:background="@drawable/btn_states"
	            android:src="@drawable/listback"
	            android:contentDescription="@string/hello_world" />
	    </LinearLayout>        
                
	</LinearLayout>
</ScrollView>